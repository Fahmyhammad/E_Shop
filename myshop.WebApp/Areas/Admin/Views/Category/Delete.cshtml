@model Category
@{
    ViewBag.PageTitle = "إدارة الفئات";
    ViewBag.CardTitle = "حذف فئة";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteCategory" method="post">
            <input hidden asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name">الاسم</label>
                <input asp-for="Name" disabled class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description">الوصف</label>
                <input asp-for="Description" disabled class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" asp-area="Admin" asp-action="DeleteCategory" asp-controller="Category" class="btn btn-outline-danger" style="width:120px; height:40px;">حذف</button> ||
                <a asp-action="Index" asp-controller="Category" class="btn btn-outline-success" style="width:120px; height:40px;">العودة للقائمة</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
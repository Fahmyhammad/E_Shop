@model IEnumerable<OrderHeader>
@{
    ViewBag.PageTitle = "Order Management";
    ViewBag.CardTitle = "View Orders";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-12">
            <form class="form-inline" asp-area="Admin" asp-action="Search" asp-controller="Order">
                <div class="input-group" style="width: 100%;">
                    <input class="form-control" type="search" placeholder="Search" name="order" style="flex: 1;">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-outline-primary py-1 px-4">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table id="myTable" class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">PhoneNumber</th>
                    <th scope="col">Email</th>
                    <th scope="col">OrderStatus</th>
                    <th scope="col">OrderTotal</th>
                    <th scope="col">Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.AppUser.Email</td>
                        <td>@item.OrderStatus</td>
                        <td>@item.TotalPrice</td>
                        <td>
                            <a class="btn btn-outline-success btn-sm" href="/Admin/Order/Details?orderId=@item.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
